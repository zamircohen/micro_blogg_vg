<%- include("partials/header.ejs") %>

<div class="background">

    <img src="/<%= userPosts[userPosts.length-1].entryPhoto %>" alt="A user profile photo" height="200px" width="200px" border-radius="50%">

        <h2> Username: <%= userPosts[userPosts.length-1].entryUser %> </h2>
